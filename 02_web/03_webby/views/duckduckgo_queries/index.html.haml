.centerbox

  %h1 DuckDuckGo Queries

  %p
    = link_to 'New Query', '/duckduckgo_queries/new'

  %hr{:size => 1, :width => 300}

  %table{:align => :center, :width => "80%"}
    %tr
      %th Name
      %th Query
      %th
      %th
      %th

    - @queries.each do |query|
      %tr
        %td= query.name
        %td= query.query
        %td= link_to 'Show', "/duckduckgo_queries/#{query.id}"
        %td= link_to 'Edit', "/duckduckgo_queries/#{query.id}/edit"
        %td
          - form_for query, "/duckduckgo_queries/#{query.id}/delete", :id => "delete_#{query.id}", :method => :POST do |f|
            = csrf_tag
            = link_to 'Destroy', "javascript:$('#delete_#{query.id}').submit();", :confirm => "Are you sure?"

          


  %hr{:size => 1, :width => 300}
  %br

  %p Powered by DuckDuckGo API